{
	"compilerOptions": {
	  "target": "ES2022",
	  "module": "ESNext",
	  "outDir": "../../dist/api",
	  "strict": true,
	  "esModuleInterop": true,
	  "skipLibCheck": true,
	  "forceConsistentCasingInFileNames": true,
	  "baseUrl": ".", 
	  "paths": { 
		"*": ["*", "./node_modules/*"]
	  },
	  "moduleResolution": "node", 
	  "resolveJsonModule": true, 
	  "allowSyntheticDefaultImports": true,
	  "allowImportingTsExtensions": true,
	  "noEmit": true
	},
	"include": ["./**/*"], 
	"exclude": ["node_modules"]
  }